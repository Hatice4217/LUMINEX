# LUMINEX Backend - Environment Variables Template

# Server
NODE_ENV=development
PORT=3000

# Database (Geliştirme için SQLite, Production için PostgreSQL)
# SQLite: file:./dev.db
# PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL="file:./dev.db"

# JWT Secret (Production'da mutlaka değiştirin - en az 32 karakter)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRE=7d

# License Secret
LICENSE_SECRET=your_license_secret_here_minimum_32_characters

# CORS (Frontend URL)
FRONTEND_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Log Level
LOG_LEVEL=info

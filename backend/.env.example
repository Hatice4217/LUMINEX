# LUMINEX Backend - Environment Variables Template

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# SQLite: file:./dev.db
# PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://luminex_user:luminex_password@localhost:5432/luminex_db?schema=public"

# ============================================
# JWT AUTHENTICATION
# ============================================
# Production'da mutlaka değiştirin - en az 32 karakter
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRE=7d

# ============================================
# LICENSE
# ============================================
LICENSE_SECRET=your_license_secret_here_minimum_32_characters

# ============================================
# CORS
# ============================================
FRONTEND_URL=http://localhost:8080

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# ENCRYPTION (AES-256-GCM)
# ============================================
# 32 byte (256 bit) hex string - Production'da mutlaka değiştirin
# Oluşturmak için: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ENABLED=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info

# ============================================
# REDIS CONFIGURATION (Cache & Queues)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true
CACHE_ENABLED=true

# Queue için farklı DB
REDIS_QUEUE_DB=1

# ============================================
# EMAIL CONFIGURATION (Resend)
# ============================================
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@luminex.app
EMAIL_ENABLED=true

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================
# MONITORING & ERROR TRACKING
# ============================================
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# ============================================
# BULL QUEUE CONFIGURATION
# ============================================
BULL_QUEUE_REDIS_HOST=localhost
BULL_QUEUE_REDIS_PORT=6379
BULL_QUEUE_REDIS_PASSWORD=

# ============================================
# APPOINTMENT REMINDER CONFIGURATION
# ============================================
# Cron pattern: "0 0 * * *" = Her gece yarısı
DAILY_REMINDER_CRON=0 0 * * *
# Randevudan kaç saat önce hatırlatma gönderilsin
REMINDER_HOURS_BEFORE=24
